{
  "name": "drawlab-statyczna",
  "version": "1.0.0",
  "description": "DrawLab - Statyczna strona HTML/CSS/JS agencji kreatywnej z Radomia",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --host=localhost --ignore=node_modules",
    "build:css": "npx @tailwindcss/cli -i css/tailwind.css -o css/main.css --minify",
    "validate:html": "html-validator --file=index.html && html-validator --file=kontakt.html",
    "validate:css": "stylelint css/**/*.css",
    "lint:js": "eslint js/**/*.js",
    "format": "prettier --write '**/*.{html,css,js,json,md}'",
    "format:check": "prettier --check '**/*.{html,css,js,json,md}'",
    "test": "npm run validate:html && npm run validate:css && npm run lint:js"
  },
  "keywords": [
    "drawlab",
    "static-site",
    "performance",
    "wcag",
    "html5",
    "tailwindcss",
    "vanilla-js"
  ],
  "author": "Piotr - DrawLab",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-validator": "^6.0.1",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.4",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "postcss": "^8.5.0",
    "autoprefixer": "^10.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
